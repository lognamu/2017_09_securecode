<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
  	<!-- 객체의 별칭을 부여할때 사용 -->
  	<typeAlias type="java.util.HashMap" alias="HashMap"/>
  	<typeAlias type="vo.BbsVo" alias="BbsVo"/>
  	<typeAlias type="vo.CommentVo" alias="CommentVo"/>
  </typeAliases>
  <environments default="">
    <environment id="">
      <transactionManager type="JDBC"/>
      <dataSource type="JNDI">
        <property name="data_source" value="java:comp/env/jdbc/mysql_web_programing"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="config/mybatis/mapper/bbs.xml"/>
    <mapper resource="config/mybatis/mapper/comment.xml"/>
  </mappers>
</configuration>